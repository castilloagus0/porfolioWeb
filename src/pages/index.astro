---
import BaseLayout from '../layouts/BaseLayout.astro';
import Layout from '../layouts/Layout.astro';
import AboutMeSection from '../components/AboutMeSection.astro';
---

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@400;600;700&display=swap');
	
	:root {
		font-family: 'Inter', sans-serif;
	}
	
	h1, h2, h3, h4, h5, h6, .font-heading {
		font-family: 'Outfit', sans-serif;
	}
</style>

<BaseLayout>
	<header class="px-6 sm:px-10 py-5 bg-[#111827] border-b border-slate-800/50">
		<nav class="max-w-6xl mx-auto flex items-center justify-between">
			<!-- Brand -->
			<a href="/" class="text-lg sm:text-xl font-bold text-white tracking-tight font-heading">
				AGUSDESIGN
			</a>

			<!-- Links + CTA -->
			<div class="flex items-center gap-6 sm:gap-10">
				<a href="#about-me" class="text-sm text-slate-300 hover:text-white transition-colors">
					SOBRE MI
				</a>
				<a href="#experience" class="text-sm text-slate-300 hover:text-white transition-colors">
					EXPERIENCIA
				</a>
				<a href="#projects" class="text-sm text-slate-300 hover:text-white transition-colors">
					PROYECTOS
				</a>
				<a
					href="#contact"
					class="px-5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white text-sm font-semibold rounded-lg transition-colors"
				>
					CONTACTAME
				</a>
			</div>
		</nav>
	</header>
	
	<Layout>
		<AboutMeSection />
	</Layout>

</BaseLayout>
