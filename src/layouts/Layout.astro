---
import '../styles/global.css';
---

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@400;600;700&display=swap');
	
	:root {
		font-family: 'Inter', sans-serif;
	}
	
	h1, h2, h3, h4, h5, h6, .font-heading {
		font-family: 'Outfit', sans-serif;
	}
</style>

<div class="min-h-screen w-full bg-[#111827] relative overflow-hidden">
	<div
		class="absolute inset-0 z-0 opacity-60"
		style="background-image:
			radial-gradient(ellipse at 30% 80%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
			radial-gradient(ellipse at 70% 20%, rgba(30, 64, 175, 0.1) 0%, transparent 40%);
		"
	></div>

	<div class="relative z-10">
		<slot />
	</div>
</div>

<style is:global>
	:root {
		--var-color-primary: #162427;
		--var-color-secondary: #56A5DD;
		--var-color-tertiary: #56A5DD;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>