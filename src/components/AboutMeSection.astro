<section id="about-me" class="min-h-[calc(100vh-80px)] flex items-stretch">
	<div class="grid grid-cols-1 lg:grid-cols-2 w-full max-w-7xl mx-auto">
		<!-- Imagen - sin recuadro, integrada con el fondo -->
		<div class="relative order-2 lg:order-1 min-h-[400px] lg:min-h-0 bg-gray-900">
			<img 
				src="/person.webp" 
				alt="Foto profesional de Agustín" 
				class="absolute inset-0 w-full h-full object-cover object-top"
			/>
		</div>

		<!-- Contenido -->
		<div class="order-1 lg:order-2 flex flex-col justify-center px-6 sm:px-12 lg:px-16 py-12 lg:py-16">
			<!-- Badge -->
			<span class="text-slate-500 text-xs sm:text-sm font-medium tracking-[0.2em] uppercase mb-4">
				DISPONIBLE PARA PROYECTOS
			</span>

			<!-- Título principal -->
			<h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight font-heading mb-5">
				Diseñando futuros 
				<span class="text-blue-400">digitales</span>
			</h1>

			<!-- Descripción -->
			<p class="text-slate-400 text-base sm:text-lg leading-relaxed max-w-xl mb-8">
				Soy Agustín, diseñador de producto senior especializado en experiencias digitales de alto rendimiento. Me enfoco en crear interfaces claras, modernas y centradas en las personas, conectando la complejidad técnica con soluciones simples y usables.
			</p>

			<!-- Botón CTA -->
			<a 
				href="#projects" 
				class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-semibold rounded-lg transition-colors w-fit text-sm"
			>
				VER PROYECTOS
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
				</svg>
			</a>

			<!-- Estadísticas -->
			<div class="flex gap-12 pt-12 mt-4">
				<div>
					<p class="text-2xl sm:text-3xl font-bold text-white">5+</p>
					<p class="text-slate-500 text-sm font-medium mt-0.5">AÑOS DE EXPERIENCIA</p>
				</div>
				<div>
					<p class="text-2xl sm:text-3xl font-bold text-white">10+</p>
					<p class="text-slate-500 text-sm font-medium mt-0.5">PROYECTOS</p>
				</div>
			</div>
		</div>
	</div>
</section>
